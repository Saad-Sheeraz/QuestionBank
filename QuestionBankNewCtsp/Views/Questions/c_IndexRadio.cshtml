                        <div style="float:initial;">
                            <img src="~/questionIMG/@choice.answerPic" width="220" height="220" />
                        </div>
                    </div>
                </div>

                countR++;

            }
            <input type="hidden" id="radio-previous" name="radio-previous" value="" />
        </div> <!--END Choices-->
    </div>
    <div id="@string.Format("{0}{1}{2}", "Ans", "Q", count)">

