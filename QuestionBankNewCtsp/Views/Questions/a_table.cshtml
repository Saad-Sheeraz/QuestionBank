

<style>
    body {
        counter-reset: Serial; /* Set the Serial counter to 0 */
    }

    table {
        border-collapse: separate;
    }

    .auto-index td:first-child:before {
        counter-increment: Serial; /* Increment the Serial counter */
        content: "" counter(Serial); /* Display the counter */
    }
</style>
@{
    ViewBag.Title = "a_table";
}

<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />

@*@using (Html.BeginForm("showtableApprover", "Questions"))*@
@using (Ajax.BeginForm("a_table", "Questions",
    new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure",
        LoadingElementId = "progress"

    }))
{
    <div class="row grid-first" id="collapse-grid1">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="g_panel">
                <div style="margin-top:7px">
                    @*<a href='@Url.Action("Create", "Degrees")' class="btn btn-primary">Add New</a>*@
                </div>
            </div>

            <div class="g_panel">
                <div class="g_title">
                    <div class="h-transaction pull-left" style="align-items:center">
                        <div style="align-items:center">
                            <h2>Approve Question & Answers</h2>
                        </div>
                    </div>
                    <div class="collapse-btn pull-right">
                        <a class="collapse-link" data-toggle="collapse" href="#collapse-1" data-parent="#collapse-grid1"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="g_content collapse in" id="collapse-1">
                    <div class="table-responsive">
                        <div class="auto-index">
                            <table class="table table-striped jambo_table" id="example">
                                <thead>
                                    <tr class="headings" style="background-color:#e2e0d4 !important">
                                        <th>Sr#</th>
                                        <th>
                                            Question
                                        </th>
                                        <th>
                                            Right_Answer
                                        </th>
                                        <th>
                                            Verified_Date
                                        </th>
                                        <th>
                                            Show
                                        </th>
                                        <th>
                                            Status:
                                        </th>
                                        <th>
                                            Action:
                                        </th>
                                        <th>
                                            Details:
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.mydata)
                                    {
                                        if (item.answerID == item.rightID && item.statusInfo != "deleted")
                                        {
                                            <tr style="background-color:papayawhip !important;">
                                                <td></td>
                                                <td>
                                                    @Html.Raw(item.questionText)
                                                </td>
                                                <td>
                                                    @Html.Raw(item.answerText1)
                                                </td>
                                                <td>
                                                    @Html.Raw(item.verifiedDate)
                                                </td>
                                                <td>
                                                    @{
                                                        foreach (var x in ViewBag.questiontbl)
                                                        {
                                                            if (x.questionID == item.questionID && x.approvedDate != null)
                                                            {
                                                                <div id="showwithoutbtn" style="font-size:large;" class="btn btn-info">
                                                                    @Html.ActionLink("View ", "a_GridRadioEditableNot", new { id = item.questionID, p_catid = ViewBag.cid, p_subid = ViewBag.subid, p_degid = ViewBag.degid })
                                                                </div>

                                                            }
                                                            else if (x.questionID == item.questionID)
                                                            {
                                                                <div id="showwithbtn" style="font-size:large;" class="btn btn-success">
                                                                    @Html.ActionLink("Edit ", "a_GridRadioEditable", new { id = item.questionID, p_catid = ViewBag.cid, p_subid = ViewBag.subid, p_degid = ViewBag.degid })
                                                                </div>

                                                            }

                                                        }
                                                    }

                                                </td>
                                                <td>
                                                    @{ @*var x= ViewBag.questiontbl.where(i=>i.questionID).select*@
                                                    foreach (var val in ViewBag.questiontbl)
                                                    {
                                                        if (val.questionID == item.questionID && val.verifiedDate != null)
                                                        {
                                                            <div id="approvedone">
                                                                <label for="other" style="font-size:medium; color:lawngreen">Verified</label>
                                                            </div>

                                                        }
                                                        else if (val.questionID == item.questionID)
                                                        {
                                                            @*<div id="approve">
                                                                    @Html.ActionLink("Verify", "showtable1", new { id = item.questionID, id2 = item.answerID })

                                                                </div>*@

                                                        }
                                                    }
                                                    }
                                                </td>
                                                <td>
                                                    @{
                                                        foreach (var val in ViewBag.questiontbl)
                                                        {
                                                            if (val.questionID == item.questionID && val.verifiedDate != null && val.approvedDate != null)
                                                            {
                                                                <div id="approvedone">
                                                                    <label for="other" style="font-size:medium; color:forestgreen">Approved</label>
                                                                </div>

                                                            }
                                                            else if (val.questionID == item.questionID)
                                                            {
                                                                <div id="approveit" style="font-size:medium;" class="btn btn-danger">
                                                                    @Html.ActionLink("Approve", "a_approveClick", new { id = item.questionID }, new { @class = "thislnk" })
                                                                    @*<input type="submit" value="Create" class="btn btn-default" />*@
                                                                </div>

                                                            }
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn btn-sm btn-warning">
                                                        @Html.ActionLink("Details", "a_Details", new { idq = item.questionID, ida = item.rightID, c = ViewBag.cid, s = ViewBag.subid, d = ViewBag.degid })
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>

                           </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
