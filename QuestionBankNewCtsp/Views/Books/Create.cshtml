@model DAL.tblBook

@{
    ViewBag.Title = "Create";
}

@using (Ajax.BeginForm("Create", "Books",
                     new AjaxOptions
                     {
                         OnSuccess = "OnSuccess",
                         OnFailure = "OnFailure",
                         LoadingElementId = "progress"
                     }))
{
    @Html.AntiForgeryToken()

   
   
    <div role="tabpanel" class="tab-pane" id="profile">

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Add Book</h3>
            </div>
            <div class="panel-body">
                <div class="row user_profile">

                    <div class="col-sm-3">
                        <label for="fname">Select Degree:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.DropDownList("degreeId", null, "-- select degree name --", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.degreeId, "", new { @class = "text-danger" })
                        </span>
                    </div>

                    <div class="col-sm-3">
                        <label for="fname">Select Subject:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.DropDownList("subjectId", null, "-- select subject name --", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.subjectId, "", new { @class = "text-danger" })
                        </span>
                    </div>

                    <div class="col-sm-3">
                        <label for="fname">Book Name:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.EditorFor(model => model.bookName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.bookName, "", new { @class = "text-danger" })
                        </span>
                    </div>

                    <div class="col-sm-3">
                        <label for="fname">Author Name:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.EditorFor(model => model.bookAuthor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.bookAuthor, "", new { @class = "text-danger" })
                        </span>
                    </div>
                    <div>
                        @ViewBag.msg
                    </div>

                    <div class="col-md-9" style="margin-bottom: 10px;">

                        <input type="submit" value="Add" class="btn btn-success" />
                    </div>

                </div>
            </div>
            <div class="panel-footer">
                <div class="btn btn-sm btn-warning">
                    @Html.ActionLink("Show", "Index")
                </div>
            </div>

        </div>
    </div>
}
<script>

    $(document).ready(function () {
        $("input[type='submit']").click(function (e) {
            if ($('#degreeId option:selected').val() == "") {
                e.preventDefault();
                alert("Please Select Degree");
                // display error msg beside ddl too
            }

            else if ($('#subjectId option:selected').val() == "") {
                e.preventDefault();
                alert("Please Select Subject");
                // display error msg beside ddl too
            }
        });
    }
    )


        $('#degreeId').on('change', function () {
        debugger;
            var division = $('#degreeId option:selected').val();
       // alert(gender);
            var myvar1 = $('#degreeId option:selected').text();
            $('#myVar').val($('#degreeId option:selected').text());
             $.ajax({
                type: 'Get',
                 data: { division: division },
                url: '@Url.Action("GetDegree", "Books")',
                success: function (result) {
                debugger;
                //$('#tblPostInformation_ctspCode').val(result);
                var itemName = "";
                var s = '<option value="">-- Select --</option>';
                $.each(result, function (i, val) {
                    itemName = val.subjectName;
                    s += "<option value='" + val.subjectID + "'>" + itemName + "</option>";
                });
                    $('#subjectId').html(s);
                }
                });
        });
</script>

