@model DAL.tblBook

@{
    ViewBag.Title = "Delete";
}
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(t => t.bookID);
        @Html.HiddenFor(t => t.subjectId);
        @Html.HiddenFor(t => t.degreeId);
        @Html.HiddenFor(t => t.bookName);
        @Html.HiddenFor(t => t.bookAuthor);
       
        @Html.HiddenFor(t => t.createdOn);
        @Html.HiddenFor(t => t.createdBy);
        @Html.HiddenFor(t => t.updatedBy);
        @Html.HiddenFor(t => t.updatedOn);
        @Html.HiddenFor(t => t.status);

        <div role="tabpanel" class="tab-pane" id="profile">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Are you sure you want to delete this?</h3>
                </div>
                <div class="panel-body">
                    <div class="row user_profile">

                        <!-- Text input-->
                        <div class="col-sm-3">
                            @Html.Label("Degree Name:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">
                            <span>
                                @Html.DisplayFor(model => model.tblDegree.degreeName)
                            </span>

                        </div>
                        <!-- Text input-->
                        <div class="col-sm-3">
                            @Html.Label("Subject By:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">
                            @Html.DisplayFor(model => model.tblSubject.subjectName)


                        </div>


                        <div class="col-sm-3">
                            @Html.Label("Book Name:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">
                            @Html.DisplayFor(model => model.bookName)

                        </div>


                      

                        <div class="col-sm-3">
                            @Html.Label("Author Name:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">
                            @Html.DisplayFor(model => model.bookAuthor)

                        </div>




                        <div class="col-sm-3">
                            @Html.Label("Created By:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">

                            @Html.DisplayFor(model => model.createdBy)

                        </div>

                        <!-- Text input-->
                        <div class="col-sm-3">
                            @Html.Label("Created On:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">

                            @Html.DisplayFor(model => model.createdOn)

                        </div>
                        @{
                            <!-- Prepended text-->
                            <div class="col-sm-3">
                                @Html.Label("Updated By:")
                            </div>

                            if (Model.updatedBy != null)
                            {

                                <div class="col-sm-9 " style="margin-bottom: 10px;">
                                    <span>
                                        @Html.DisplayFor(model => model.updatedBy)

                                    </span>
                                </div>
                            }
                            else if (Model.updatedBy == null)
                            {
                                <p>Not Updated</p>
                            }




                        }

                        <!-- Text input-->
                        @{
                            <div class="col-sm-3">
                                @Html.Label("Updated On:")
                            </div>

                            if (Model.updatedOn != null)
                            {
                                <div class="col-sm-9 " style="margin-bottom: 10px;">
                                    <span>
                                        @Html.DisplayFor(model => model.updatedOn)

                                    </span>
                                </div>
                            }
                            else if (Model.updatedOn == null)
                            {
                                <p>Not Updated</p>
                            }
                        }



                     
                    </div>
                </div>
                <div class="panel-footer">
                    <span>
                        <input type="submit" value="Delete" class="btn btn-success" />
                    </span>
                </div>
            </div>
        </div>
        <div class="form-actions no-color">
            <div class="btn btn-sm btn-warning" style="font-size:small;">
                @Html.ActionLink("Back", "Index")
            </div>
        </div>

    }
</div>