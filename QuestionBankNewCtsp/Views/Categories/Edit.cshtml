@model DAL.tblCategory

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*@Html.HiddenFor(model => model.classId)
    @Html.HiddenFor(model => model.subjectId)*@

    @Html.HiddenFor(model => model.createdOn)
    @Html.HiddenFor(model => model.createdBy)
    @Html.HiddenFor(model => model.status)

    @Html.HiddenFor(model => model.categoryID)
    <div role="tabpanel" class="tab-pane" id="profile">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.categoryID)*@
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Edit</h3>
            </div>
            <div class="panel-body">
                <div class="row user_profile">

                    <div class="col-sm-3">
                        <label for="fname">Select Degree:</label>
                    </div>

                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.DropDownList("classId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.classId, "", new { @class = "text-danger" })
                            @*@Html.DropDownList("classId", null, "-- select degree name --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.classId, "", new { @class = "text-danger" })*@

                        </span>
                    </div>


                    <div class="col-sm-3">
                        <label for="fname">Select Subject:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.DropDownList("subjectId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.subjectId, "", new { @class = "text-danger" })

                        </span>
                    </div>


                    <div class="col-sm-3">
                        <label for="fname">Enter Content:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                        </span>
                    </div>
                    <div>
                        @ViewBag.msg
                    </div>
                    <div class="col-md-9" style="margin-bottom: 10px;">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>

                </div>
            </div>
            <div class="panel-footer">
                <div class="btn btn-sm btn-warning">
                    @Html.ActionLink("Back", "Index")
                </div>
            </div>

        </div>
    </div>
}
<script>
  $('#classId').on('change', function () {
        debugger;
        var division = $('#classId option:selected').val();
       // alert(gender);
        var myvar1 = $('#classId option:selected').text();
        $('#myVar').val($('#classId option:selected').text());
             $.ajax({
                type: 'Get',
                 data: { division: division },
                url: '@Url.Action("GetDegree", "Categories")',
                success: function (result) {
                debugger;
                //$('#tblPostInformation_ctspCode').val(result);
                var itemName = "";
                var s = '<option value="">-- Select --</option>';
                $.each(result, function (i, val) {
                    itemName = val.subjectName;
                    s += "<option value='" + val.subjectID + "'>" + itemName + "</option>";
                });
                    $('#subjectId').html(s);
                }
                });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
