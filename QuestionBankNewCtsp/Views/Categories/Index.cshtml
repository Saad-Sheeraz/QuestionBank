@model IEnumerable<DAL.tblCategory>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        counter-reset: Serial; /* Set the Serial counter to 0 */
    }

    table {
        border-collapse: separate;
    }

    .auto-index td:first-child:before {
        counter-increment: Serial; /* Increment the Serial counter */
        content: "" counter(Serial); /* Display the counter */
    }
    .grid-first .g_panel .g_title {
        background-color: #001023;
    }

    .row {
        margin-left: -16px;
    }
    .g_title .h-transaction h2 {
        padding-top: 1%;
        /*padding-bottom:1%;*/
    }
    .table-responsive {
        background-color: #001023;
    }

    .g_panel .g_content {
        border-color: #001023;
    }
</style>
<div class="row grid-first" id="collapse-grid1">
  

        <div class="g_panel">
            <div style="margin-top:7px">
                @*<a href='@Url.Action("Create", "Degrees")' class="btn btn-primary">Add New</a>*@
                <a href='@Url.Action("Create", "Categories")' class="btn btn-primary" style="margin-top:10px">Add Topic</a>
            </div>
        </div>

        <div class="g_panel">
            <div class="g_title" style="padding:0px;">
                <div class="h-transaction pull-center">

                    <h2 style="text-align:center;text-decoration:underline;color:white">Topics </h2>

                    @*<div class="container">
                            <div style="align-items:center">
                                <h2 style="align-items:center"> </h2>
                            </div>
                        </div>*@
                </div>
                <div class="collapse-btn pull-right">
                    <a class="collapse-link" data-toggle="collapse" href="#collapse-1" data-parent="#collapse-grid1"><i class="fa fa-chevron-down"></i></a>
                </div>

                <div class="clearfix"></div>
            </div>
            <div class="g_content collapse in" id="collapse-1" style="margin:0px">
                <div class="table-responsive">
                    <div class="auto-index">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings" style="background-color:#e2e0d4 !important">
                                    <th>Sr#</th>
                                    <th class="column-title">Degree: </th>
                                    <th class="column-title">Subject: </th>
                                    <th class="column-title">Category:</th>
                                    <th class="column-title">Created By: </th>
                                    <th class="column-title">Created On: </th>
                                    @*<th class="column-title">Updated By: </th>
                                        <th class="column-title">Updated On: </th>
                                        <th class="column-title">Status: </th>*@
                                    <th></th>


                                    @*<th class="column-title">Status:</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr style="background-color:papayawhip !important;">
                                        <td></td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tblDegree.degreeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tblSubject.subjectName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.categoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.createdBy)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.createdOn)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.updatedBy)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.updatedOn)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.status)
                                            </td>*@
                                        <td>
                                            <div class="btn btn-sm btn-warning" style="font-size:small;">
                                                @Html.ActionLink("Edit", "Edit", new { id = item.categoryID })
                                            </div>
                                            |
                                            <div class="btn btn-sm btn-success" style="font-size:small;">

                                                @Html.ActionLink("Details", "Details", new { id = item.categoryID })
                                            </div>|
                                            <div class="btn btn-sm btn-danger" style="font-size:small;">
                                                @Html.ActionLink("Delete", "Delete", new { id = item.categoryID })
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    
</div>
