@model DAL.tblSubject

@{
    ViewBag.Title = "Delete";
}

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(t => t.classId);
        @Html.HiddenFor(t => t.subjectID);
        @Html.HiddenFor(t => t.subjectName);
        @Html.HiddenFor(t => t.createdOn);
        @Html.HiddenFor(t => t.createdBy);
        @Html.HiddenFor(t => t.updatedBy);
        @Html.HiddenFor(t => t.updatedOn);
        <div role="tabpanel" class="tab-pane" id="profile">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Are you sure you want to delete this?</h3>
                </div>
                <div class="panel-body">
                    <div class="row user_profile">

                        <!-- Text input-->
                        <div class="col-sm-3">
                            @Html.Label("Degree Name:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">
                            <span>
                                @Html.DisplayFor(model => model.tblDegree.degreeName)
                            </span>

                        </div>
                        <!-- Text input-->
                        <div class="col-sm-3">
                            @Html.Label("Subject Name:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">
                            @Html.DisplayFor(model => model.subjectName)
                            @*@Html.DisplayFor(model => model.createdBy)*@
                        </div>


                        <!-- Text input-->

                        <div class="col-sm-3">
                            @Html.Label("Created By:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">

                            @Html.DisplayFor(model => model.createdBy)
                        </div>

                        <!-- Prepended text-->
                        <!-- Text input-->

                        <div class="col-sm-3">
                            @Html.Label("Created On:")
                        </div>
                        <div class="col-sm-9" style="margin-bottom: 10px;">

                            @Html.DisplayFor(model => model.createdOn)

                        </div>

                        <!-- Prepended text-->
                        <div class="col-sm-3">
                            @Html.Label("Updated By:")
                        </div>

                        @{
                            if (Model.updatedBy != null)
                            {
                                <div class="col-sm-9 " style="margin-bottom: 10px;">
                                    <span>
                                        @Html.DisplayFor(model => model.updatedBy)
                                    </span>
                                </div>
                            }
                            else if (Model.updatedBy == null)
                            {
                                <p style="font:bold">Not Updated!</p>
                            }

                            <!-- Text input-->
                            <div class="col-sm-3">
                                @Html.Label("Updated On:")
                            </div>

                            if (Model.updatedOn != null)
                            {
                                <div class="col-sm-9 " style="margin-bottom: 10px;">
                                    <span>
                                        @Html.DisplayFor(model => model.updatedOn)

                                    </span>
                                </div>

                            }
                            else if (Model.updatedOn == null)
                            {
                                <p style="font:bold">Not Updated!</p>
                            }



                        }
                       
                    </div>
                </div>
                <div class="panel-footer">
                    <span>
                        <input type="submit" value="Delete" class="btn btn-sm btn-danger" style="font-size:small;" />
                    </span>
                </div>
            </div>
        </div>
        <div class="form-actions no-color">

            <div class="btn btn-sm btn-warning" style="font-size:small;">
                @Html.ActionLink("Back", "Index")
            </div>
        </div>

    }
</div>