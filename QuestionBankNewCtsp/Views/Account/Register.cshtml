@model QuestionBankNewCtsp.Models.RegisterViewModel
@{
    /**/

    ViewBag.title = "register";
}


@*@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@

@using (Ajax.BeginForm("Register", "Account", FormMethod.Post,
    new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure",
        LoadingElementId = "progress"

    }, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div role="tabpanel" class="tab-pane" id="profile">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Register</h3>
            </div>
            <div class="panel-body">
                <div class="row user_profile">
                    <div class="col-sm-12">
                        <div class="col-md-1 col-md-offset-12">
                            @Html.ActionLink("Back", "ShowPersons", "UserProfiles", new { area = "UserProfiles", id = Session["ID"] }, new { @class = "btn btn-warning" })
                        </div>

                    </div>
                    <div class="form-group">

                        <div class="col-md-12">
                            <div class="col-md-5">
                                @Html.Label("Name:")
                                @Html.TextBoxFor(m => m.name, new { @class = "form-control" })

                            </div>
                            <div class="col-md-5">
                                @Html.Label("Cnic:")
                                @Html.TextBoxFor(m => m.cnic, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                    &nbsp;
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-5">
                                @Html.Label("Phone-No:")

                                @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })

                            </div>

                            <div class="col-md-5">
                                @Html.Label("Address:")

                                @Html.TextBoxFor(m => m.address, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-5">

                                @Html.Label("Subject:")

                                @Html.DropDownList("SubId", null, "--select role--", htmlAttributes: new { @class = "dropbtn", required = "required" })

                            </div>

                            <div class="col-md-5">

                                @Html.Label("Select Role:")
                                @Html.DropDownList("RollId", null, "--select role--", htmlAttributes: new { @class = "dropbtn", required = "required" })
                            </div>

                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group">


                        <div class="col-md-12">

                            <div class="col-md-5">

                                @Html.Label("Email:")
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>

                            <div class="col-md-5">

                            </div>

                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-5">
                                @*@Html.LabelFor(model => model.address, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                @Html.Label("Password:")
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>

                            <div class="col-md-5">
                                @*@Html.LabelFor(model => model.userType, "userType", htmlAttributes: new { @class = "control-label col-md-2" })*@
                                @Html.Label("Confirm Password:")
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>

                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <div class="col-md-12">

                            <div class="col-md-5" style="display:none">

                                @Html.Label("Upload Image:")
                                <div>
                                    <input type="file" title="browse" id="profilePic" name="file" />
                                </div>
                            </div>
                        </div>

                    </div>
                    &nbsp;
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div style="margin-left:50.66666%">
                                <input type="submit" value="Create Profile" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}