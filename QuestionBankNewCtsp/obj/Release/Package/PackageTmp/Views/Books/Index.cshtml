@model IEnumerable<DAL.tblBook>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        counter-reset: Serial; /* Set the Serial counter to 0 */
    }

    table {
        border-collapse: separate;
    }

    .auto-index td:first-child:before {
        counter-increment: Serial; /* Increment the Serial counter */
        content: "" counter(Serial); /* Display the counter */
    }
</style>
<h2>Index</h2>

<p>

</p>

<div class="row grid-first" id="collapse-grid1">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="g_panel">
            <div style="margin-top:7px">
                @*<a href='@Url.Action("Create", "Degrees")' class="btn btn-primary">Add New</a>*@
            </div>
        </div>

        <div class="g_panel">

            <a href='@Url.Action("Create", "Books")' class="btn btn-primary">Add New</a>
            <div class="g_title">
                <div class="h-transaction pull-left" style="align-items:center">

                    <div class="container">
                        <div style="align-items:center">
                            <h2 style="align-items:center">Books Stack: </h2>
                        </div>
                    </div>
                </div>
                <div class="collapse-btn pull-right">
                    <a class="collapse-link" data-toggle="collapse" href="#collapse-1" data-parent="#collapse-grid1"><i class="fa fa-chevron-down"></i></a>
                </div>

                <div class="clearfix"></div>
            </div>
            <div class="g_content collapse in" id="collapse-1">
                <div class="table-responsive">
                    <div class="auto-index">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings" style="background-color:#e2e0d4 !important">
                                    <th>Sr#</th>
                                    <th class="column-title">Degree: </th>
                                    <th class="column-title">Subject: </th>
                                    <th class="column-title">Book:</th>
                                    <th class="column-title">Author: </th>
                                    <th></th>


                                    @*<th class="column-title">Status:</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr style="background-color:papayawhip !important;">
                                        <td></td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tblDegree.degreeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tblSubject.subjectName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.bookName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.bookAuthor)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.bookID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.bookID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.bookID })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

