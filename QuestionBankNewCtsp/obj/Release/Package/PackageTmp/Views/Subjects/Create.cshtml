@model DAL.tblSubject

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

  



    <div role="tabpanel" class="tab-pane" id="profile">

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Insert New</h3>
            </div>
            <div class="panel-body">
                <div class="row user_profile">

                    <!-- Text input-->
                    <div class="col-sm-3">
                        <label for="fname">Select Degree/Class:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.DropDownList("classId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.classId, "", new { @class = "text-danger" })
                        </span>

                    </div>                 
                    <div class="col-sm-3">
                        <label for="fname">Enter Subject:</label>
                    </div>
                    <div class="col-sm-9" style="margin-bottom: 10px;">
                        <span>
                            @Html.EditorFor(model => model.subjectName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.subjectName, "", new { @class = "text-danger" })
                        </span>

                    </div>
                    <div class="col-sm-12">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="btn btn-sm btn-warning">
                  
                        @Html.ActionLink("Show", "Index")
                   

                </div>
            </div>

        </div>
    </div>


}

