@model DAL.tblQuestion

@{
    ViewBag.Title = "c_editQuestionBox";
}

<h2>Edit Question:</h2>

@using (Html.BeginForm("c_editQuestionBox", "Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.questionID)
    @Html.HiddenFor(model => model.degreeId)
    @Html.HiddenFor(model => model.categoryId)
    @Html.HiddenFor(model => model.subjectId)
    @Html.HiddenFor(model => model.complexityId)
    @Html.HiddenFor(model => model.bookId)
    @Html.HiddenFor(model => model.bookPageNum)
    @Html.HiddenFor(model => model.createdBy)
    @Html.HiddenFor(model => model.createdOn)
    @Html.HiddenFor(model => model.picBool)
    @Html.HiddenFor(model => model.questionPic)
    @Html.HiddenFor(model => model.statusInfo)
    @Html.HiddenFor(model => model.UserID)

    <div class="form-group">
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.questionText, new { @class = "ckeditor", required = "required" })
            @Html.ValidationMessageFor(model => model.questionText, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}
