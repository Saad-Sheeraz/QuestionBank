@model DAL.tblAnwer
@{
    ViewBag.Title = "v_editAnswerBox";
}


<h2>Edit Answer:</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.answerID)
    @Html.HiddenFor(model => model.questionId)
    @Html.HiddenFor(model => model.createdOn)
    @Html.HiddenFor(model => model.answerPic)
    @Html.HiddenFor(model => model.ansPicBool)


    <div class="form-group">

        <div class="col-md-10">
            @Html.TextAreaFor(model => model.answerText1, new { @class = "ckeditor", required = "required" })
            @Html.ValidationMessageFor(model => model.answerText1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

