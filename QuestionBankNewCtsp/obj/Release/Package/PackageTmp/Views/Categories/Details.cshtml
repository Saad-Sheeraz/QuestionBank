@model DAL.tblCategory

@{
    ViewBag.Title = "Details";
}


<div role="tabpanel" class="tab-pane" id="profile">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Details</h3>
        </div>
        <div class="panel-body">
            <div class="row user_profile">

                <!-- Text input-->
                <div class="col-sm-3">
                    @Html.Label("Degree Name:")
                </div>
                <div class="col-sm-9" style="margin-bottom: 10px;">

                    @Html.DisplayFor(model => model.tblDegree.degreeName)


                </div>
                <!-- Text input-->
                <div class="col-sm-3">
                    @Html.Label("Subject Name:")
                </div>
                <div class="col-sm-9" style="margin-bottom: 10px;">

                    @Html.DisplayFor(model => model.tblSubject.subjectName)


                </div>
                <!-- Text input-->
                <div class="col-sm-3">
                    @Html.Label("Category Name:")
                </div>
                <div class="col-sm-9" style="margin-bottom: 10px;">
                    @Html.DisplayFor(model => model.categoryName)

                </div>

                <div class="col-sm-3">
                    @Html.Label("Created By:")
                </div>
                <div class="col-sm-9" style="margin-bottom: 10px;">
                    @Html.DisplayFor(model => model.categoryName)

                </div>

                <!-- Text input-->
                <div class="col-sm-3">
                    @Html.Label("Created On:")
                </div>
                <div class="col-sm-9" style="margin-bottom: 10px;">

                    @Html.DisplayFor(model => model.createdOn)
                    <p>no val yet</p>

                </div>

                <!-- Prepended text-->
                <div class="col-sm-3">
                    @Html.Label("Updated By:")
                </div>

                <div class="col-sm-9 " style="margin-bottom: 10px;">

                    @Html.DisplayFor(model => model.updatedBy)
                    <p>no val yet</p>

                </div>
                <!-- Text input-->

                <div class="col-sm-3">
                    @Html.Label("Updated On:")
                </div>

                <div class="col-sm-9 " style="margin-bottom: 10px;">

                    @Html.DisplayFor(model => model.updatedOn)
                    <p>no val yet</p>

                </div>
                <!-- Text input-->

                <div class="col-sm-3 control-label">
                    @Html.Label("Status:")
                </div>
                <div class="col-sm-9 " style="margin-bottom: 10px;">
                    @Html.DisplayFor(model => model.status)


                </div>
            </div>
        </div>
        <div class="panel-footer">

            <div class="btn btn-sm btn-success">
                @Html.ActionLink("Edit", "Edit", new { id = Model.categoryID })
            </div>
            <div class="btn btn-sm btn-warning">
                @Html.ActionLink("Back", "Index")
            </div>


        </div>
    </div>
</div>